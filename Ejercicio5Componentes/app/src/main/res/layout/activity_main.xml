<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sin_margen"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:text="@string/boton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margen_general"
        android:text="@string/boton"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <View
        android:id="@+id/divider"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="@dimen/margen_peque"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sin_margen"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:backgroundTint="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider"
        app:srcCompat="?attr/actionModePasteDrawable"
        app:tint="@color/yellow" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sin_margen"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:text="@string/boton"
        app:icon="?attr/actionModeCopyDrawable"
        app:iconTint="@color/yellow"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/divider" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margen_general"
        android:text="@string/text1"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <View
        android:id="@+id/divider2"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="@dimen/margen_peque"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sin_margen"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:checked="true"
        android:textOff="@string/desactivado"
        android:textOn="@string/activado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margen_general"
        android:text="@string/text2"
        app:layout_constraintBottom_toBottomOf="@+id/toggleButton"
        app:layout_constraintStart_toEndOf="@+id/toggleButton"
        app:layout_constraintTop_toTopOf="@+id/toggleButton" />

    <View
        android:id="@+id/divider3"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="@dimen/margen_peque"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:button="@android:drawable/btn_star"
        android:checked="true"
        android:text="@string/checkbox"
        app:buttonIconTint="@color/yellow"
        app:layout_constraintEnd_toStartOf="@+id/checkBox2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="@dimen/sin_margen"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:buttonTint="@color/yellow"
        android:checked="true"
        android:text="@string/checkbox"
        app:buttonIconTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox"
        app:layout_constraintEnd_toStartOf="@+id/checkBox3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margen_general"
        android:button="@android:drawable/btn_radio"
        android:checked="false"
        android:text="@string/checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/checkBox2"
        app:layout_constraintTop_toTopOf="@+id/checkBox2" />

    <View
        android:id="@+id/divider4"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="@dimen/margen_peque"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:checkedButton="@id/radioButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radiobutton" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radiobutton" />
    </RadioGroup>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:textOff="Desactivo"
        android:textOn="activo"
        app:layout_constraintBottom_toTopOf="@+id/divider6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4" />

    <View
        android:id="@+id/divider6"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="@dimen/margen_peque"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margen_general"
        android:text="@string/seekbar"
        app:layout_constraintBottom_toTopOf="@+id/divider7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:width="@dimen/margen_grande"
        android:text="@string/numero"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/divider7"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />

    <View
        android:id="@+id/divider7"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="@dimen/margen_peque"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:indeterminateTint="@color/yellow"
        android:numStars="5"
        android:progressTint="@color/yellow"
        android:rating="2.5"
        android:secondaryProgressTint="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margen_general"
        android:text="@string/ratingbar"
        app:layout_constraintBottom_toTopOf="@+id/divider8"
        app:layout_constraintStart_toEndOf="@+id/ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/divider7" />

    <View
        android:id="@+id/divider8"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="@dimen/margen_peque"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margen_general"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:drawableStart="@android:drawable/ic_dialog_email"
        android:drawableTint="@color/yellow"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider8" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activo"
        app:layout_constraintBottom_toBottomOf="@+id/switch1"
        app:layout_constraintEnd_toStartOf="@+id/switch1"
        app:layout_constraintTop_toTopOf="@+id/switch1" />

    <View
        android:id="@+id/divider5"
        android:layout_width="@dimen/sin_margen"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/margen_general"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sin_margen"
        android:layout_marginTop="@dimen/margen_general"
        android:layout_marginEnd="@dimen/sin_margen"
        android:text="@string/actionbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider5" />

</androidx.constraintlayout.widget.ConstraintLayout>